<%= form_with model: @post, local: true do |form| %>
  
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div class="form-group">
    <%= form.submit "Post" , class: "btn btn-primary" %>
  </div>
<% end %>